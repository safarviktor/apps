@model Challenger.Web.Models.HomeViewModel

@{
    ViewBag.Title = "My challenges";
}

    <h3>@ViewBag.Title</h3>


@foreach (var challenge in @Model.Challenges)
{
    
    <a href="@Url.Action("Challenge", "Home", new {Id = @challenge.Id})">
        <div class="row" >        
            <div class="col-md-12">
                <strong>@challenge.Name</strong>
            </div>                         
        </div>     
        <div class="row" >
            <div class="col-md-4">                    
                <small>Today Goal: @challenge.TodayGoal</small>
            </div>                      
            <div class="col-md-4">
                <small>Today Count: @challenge.TodayCount</small>
            </div>   
            <div class="col-md-4">
                <small>Left to do today: @challenge.TodayTodo</small>
            </div>
        </div>     
        <div class="row" >
            <div class="col-md-4">
                <small>Current Total: @challenge.CurrentTotal</small>
            </div>      
            <div class="col-md-4">
                <small>Last Entry Count: @challenge.LastEntryCount</small>
            </div>      
            <div class="col-md-4">
                <small>Last Entry: @challenge.LastEntry.GetValueOrDefault().ToString("yyyy-MM-dd HH:mm")</small>
            </div>  
        </div>
    </a>   
    <hr />
}

